# ✅ ใช้ Python 3.11-slim (Debian Bookworm) ที่เสถียรที่สุดตอนนี้
FROM python:3.11-slim

ENV PYTHONUNBUFFERED=1
ENV DJANGO_SETTINGS_MODULE=myporject.settings

WORKDIR /usr/src/app

# สั่งอัปเดตและติดตั้ง dependencies (รับรองว่าผ่านแน่นอน)
RUN apt-get update && \
    apt-get install -y default-libmysqlclient-dev gcc pkg-config && \
    pip install --no-cache-dir django djangorestframework mysqlclient django-cors-headers requests Pillow

COPY . /usr/src/app/

# สั่งรัน Server
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]